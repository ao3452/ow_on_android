<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
	<Spinner
    	android:id="@+id/construct_spinner"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:drawSelectorOnTop="true"/>
  	 <Button android:id="@+id/construct_reload_member"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="consctruct_reload_member" />
  	 <Button android:id="@+id/construct"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="consctruct" />
	 <Button android:id="@+id/times_construct"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="100times consctruct" />
  	 <Button android:id="@+id/construct_finish"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="construct finish" />
		
</LinearLayout>
